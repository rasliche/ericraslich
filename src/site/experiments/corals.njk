<script>
    function getRandomInteger(max) {
        return Math.floor(Math.random() * max);
    }

    function getRandomfromArray(array) {
        return array[getRandomInteger(array.length)]
    }

    (function() {
        console.log('hello world')
        const colors = ['red', 'blue', 'green', 'yellow']
        const canvasElement = document.querySelector('svg')
        const points = [...Array(100)].map(() => {
            return {
                x: getRandomInteger(190)+5,
                y: getRandomInteger(190)+5
            }
        })

        points.forEach(coordinatePair => {
            const circle = document.createElementNS("http://www.w3.org/2000/svg", "circle")
            circle.setAttribute("cx", coordinatePair.x) //.cx = coordinatePair.x
            circle.setAttribute("cy", coordinatePair.y) //.cx = coordinatePair.x
            circle.setAttribute("r", 5) //.cx = coordinatePair.x
            circle.setAttribute("stroke", getRandomfromArray(colors)) //.cx = coordinatePair.x
            circle.setAttribute("fill", getRandomfromArray(colors)) //.cx = coordinatePair.x
            console.log(circle)
            // <circle cx="25" cy="75" r="20" stroke="red" fill="transparent" stroke-width="5"/>
            canvasElement.appendChild(circle)
        })

        console.log(points)
    })()
</script>
